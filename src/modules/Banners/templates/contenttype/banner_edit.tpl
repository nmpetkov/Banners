<div class="z-formrow">
    {formlabel for="blocktype" __text='Block Type'}
    {nocache}
    <span id="blocktype">
    {foreach from=$catregistry key='prop' item='cat'}
        {formcategoryselector
                category=$cat
                id="category__$prop"
                group='data'
                selectedValue=$data.category__$prop}
    {/foreach}
    </span>
    {/nocache}
</div>
<div class="z-formrow">
    {formlabel for="hovertext" __text='Show hovertext in JS tooltip'}
    {formcheckbox id="hovertext" group="data"}
</div>